<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PurrfectPairCat" parent="Theme.Material3.DayNight.NoActionBar">
        <!--   Primary Colors     -->
        <item name="colorPrimary">@color/lavender_dark</item>
        <item name="colorPrimarySurface">@color/bg_lavender</item>
        <item name="colorPrimaryVariant">@color/lavender_dark</item>
        <item name="colorPrimaryInverse">@color/light_lavender</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--   Secondary Colors     -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--   Third Colors     -->
        <item name="colorTertiary">@color/grey</item>
        <item name="colorOnTertiaryFixedVariant">@color/grey_light</item>
        <item name="colorOnTertiary">@color/black</item>
    </style>

    <style name="Dark.Buttons.Operation" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_dark_button</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dark.Curve.Buttons.Operation" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_dark_button_curve</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dark.Curve.Buttons.Login" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_dark_button_curve</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Light.Buttons.Operation" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_light_button</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Light.Curve.Buttons.Operation" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_light_button_curve</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>







    <style name="Theme.PurrfectPairCat" parent="Base.Theme.PurrfectPairCat" />
</resources>