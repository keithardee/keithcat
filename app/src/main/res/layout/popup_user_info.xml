<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- CARD WIDGET BOX -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp">

        <!-- BOX CONTENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edit_text"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="50dp">


                <!--     LOGIN TEXT       -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner Information"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender_dark"/>

            <!-- Full Name TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Full Name:"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFullname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_box"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:text="Full Name *"
                android:textSize="15sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical|start"/>

            <!-- Email TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_box"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:text="Email *"
                android:textSize="15sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical|start"/>

            <!-- Contact Number TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Contact Number:"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvContactNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_box"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:text="Contact Number *"
                android:inputType="phone"
                android:textSize="15sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical|start"/>

            <!-- Facebook Name TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Facebook Name:"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFacebook"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_box"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawablePadding="8dp"
                android:text="Facebook Name *"
                android:textSize="15sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical|start"/>

            <!-- Home Address TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Home Address:"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_box"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="8dp"
                android:text="Home Address *"
                android:textSize="15sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical|start"/>

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
