<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aboutus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:padding="25dp"
    android:background="@drawable/img_start">

    <RelativeLayout
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent">

        <!--     IMAGE LOGO       -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/purrfecpair_logo" />

        <!-- BACK BUTTON -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="55dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="64dp"
            android:layout_toStartOf="@+id/imgLogo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

    <!-- Semi-transparent Box -->
    <RelativeLayout

        android:id="@+id/overlay_box"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="#80000000"
        android:background="@drawable/custom_edittext"
        android:padding="25dp"> <!-- 50% opacity black -->

        <!-- About Us Text -->
        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="The Purrfect PairÂ app's goal is to assist cat owners in finding the best breeder or match for their pets based on important characteristics including personality, energy level, breed preferences, and particular behavioral requirements. It provides a seamless, data-driven process to guarantee the best possible match between the cat and its prospective new companion or breeder, whether customers are searching for a reliable breeder with experience in a particular breed or a matching cat friend."
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>